<h1>Burgers</h1>

<h2>Burgers to eat</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burger-block}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burger-block}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger</label>
    <input type="text" id="ca" name="burger_name">
  </div>

  <button type="submit">Add burger</button>
</form>
