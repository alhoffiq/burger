<h1 class="text-center">Eat Da Burgers</h1>

<div class="text-center">
    <img alt="Burger" src="/assets/Burger_image.png" class="img-fluid">
</div>

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <h2>Burgers to eat</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burger-block}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm-4">
            <h2>Add burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="burger">Burger</label>
                    <input type="text" id="burger" name="burger_name">
                </div>

                <button type="submit" class="btn btn-primary">Add burger</button>
            </form>
        </div>
        <div class="col-sm-4">
            <h2>Burgers devoured</h2>

            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burger-block}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>